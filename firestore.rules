rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection for profile data linked to Firebase Auth UID
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Students collection
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Mock rules for other collections if they were to be implemented
    match /plans/{planId} {
      allow read: if request.auth != null;
      // Example: For now, allow authenticated users to write.
      // In a real app, restrict to specific roles (e.g., coach).
      allow write: if request.auth != null;
    }
    match /locations/{locationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /classSessions/{classSessionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
     match /bookedClasses/{bookedClassId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
