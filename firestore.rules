
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the 'users' collection for authenticated users,
    // restricting document access to the owner.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read and write to the 'students' collection.
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to read and write to the 'classSessions' collection.
    match /classSessions/{classSessionId} {
      allow read, write: if request.auth != null;
    }
  }
}
