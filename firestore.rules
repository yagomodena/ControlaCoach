
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all users for users collection
    // In a production app, you should restrict write access to the owner of the data
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Students: Authenticated users can read all, write all (adjust for prod)
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }

    // Plans: Authenticated users can read all, write all (adjust for prod)
    match /plans/{planId} {
      allow read, write: if request.auth != null;
    }

    // Locations: Authenticated users can read all, write all (adjust for prod)
    match /locations/{locationId} {
      allow read, write: if request.auth != null;
    }

    // ClassSessions: Authenticated users can read all, write all (adjust for prod)
    match /classSessions/{classSessionId} {
      allow read, write: if request.auth != null;
    }

    // Settings: Allow authenticated users to read and write their own settings
    // Assuming a single 'coachAvailability' document for simplicity.
    // For multi-user apps, you'd use `request.auth.uid` in the document path or rules.
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
